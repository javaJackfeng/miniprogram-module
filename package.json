{
  "name": "miniprogram-module",
  "displayName": "miniprogram-module",
  "description": "微信小程序创建page 和 component 模板",
  "publisher": "fengphil",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "微信小程序模板"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "miniprogram-module.createWxMiniComponent",
          "group": "navigation@10"
        },
        {
          "command": "miniprogram-module.createWxMiniPage",
          "group": "navigation@10"
        }
      ]
    },
    "commands": [
      {
        "command": "miniprogram-module.createWxMiniComponent",
        "title": "createWxMiniComponent"
      },
      {
        "command": "miniprogram-module.createWxMiniPage",
        "title": "createWxMiniPage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8"
  }
}
